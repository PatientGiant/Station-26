    <script>
        // --- UTILITY FUNCTIONS ---

        /**
         * Wraps long labels into arrays of strings for Chart.js
         * @param {string} label - The text label
         * @param {number} maxChar - Max characters per line (default 16)
         * @returns {string|string[]}
         */
        function wrapLabel(label, maxChar = 16) {
            if (label.length <= maxChar) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxChar) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // Shared Tooltip Configuration for Multi-line Labels
        const sharedTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // Common Chart Options
        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        font: { family: "'Segoe UI', sans-serif", size: 12 },
                        color: '#64748B' // slate-500
                    }
                },
                tooltip: sharedTooltipConfig
            }
        };

        // --- CHART 1: MARKET COMPOSITION (Donut) ---
        const ctxComposition = document.getElementById('marketCompositionChart').getContext('2d');
        const rawLabelsComp = ['Off-Plan Sales', 'Secondary Market (Ready)', 'Commercial/Plots'];
        const processedLabelsComp = rawLabelsComp.map(l => wrapLabel(l, 20));

        new Chart(ctxComposition, {
            type: 'doughnut',
            data: {
                labels: processedLabelsComp,
                datasets: [{
                    data: [58, 38, 4], // Percentages
                    backgroundColor: [
                        '#3B82F6', // Blue 500
                        '#06B6D4', // Cyan 500
                        '#94A3B8'  // Slate 400
                    ],
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                ...commonOptions,
                cutout: '65%',
                plugins: {
                    ...commonOptions.plugins,
                    legend: { position: 'bottom' }
                }
            }
        });

        // --- CHART 2: PRICE TRENDS (Line) ---
        const ctxPrice = document.getElementById('priceTrendChart').getContext('2d');
        const labelsPrice = ['Feb 25', 'Apr 25', 'Jun 25', 'Aug 25', 'Oct 25', 'Dec 25', 'Jan 26'];
        
        new Chart(ctxPrice, {
            type: 'line',
            data: {
                labels: labelsPrice,
                datasets: [{
                    label: 'Price Index (AED/SqFt)',
                    data: [1250, 1290, 1340, 1380, 1420, 1465, 1480],
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 3,
                    tension: 0.4, // Smooth curve
                    fill: true,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#3B82F6',
                    pointRadius: 5
                }]
            },
            options: {
                ...commonOptions,
                scales: {
                    y: {
                        beginAtZero: false,
                        grid: { color: '#E2E8F0' }, // slate-200
                        ticks: { color: '#64748B' }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: '#64748B' }
                    }
                }
            }
        });

        // --- CHART 3: TOP AREAS (Horizontal Bar) ---
        const ctxAreas = document.getElementById('topAreasChart').getContext('2d');
        const rawLabelsAreas = [
            'Jumeirah Village Circle (JVC)', 
            'Business Bay', 
            'Dubai Marina', 
            'Palm Jebel Ali', 
            'Dubai Hills Estate'
        ];
        const processedLabelsAreas = rawLabelsAreas.map(l => wrapLabel(l, 25));

        new Chart(ctxAreas, {
            type: 'bar',
            data: {
                labels: processedLabelsAreas,
                datasets: [{
                    label: 'Sales Volume (AED Billion)',
                    data: [4.2, 3.8, 3.1, 2.9, 2.5],
                    backgroundColor: [
                        '#3B82F6', 
                        '#0EA5E9', 
                        '#06B6D4', 
                        '#22D3EE', 
                        '#67E8F9'
                    ],
                    borderRadius: 4,
                }]
            },
            options: {
                ...commonOptions,
                indexAxis: 'y', // Horizontal Bar
                scales: {
                    x: {
                        grid: { color: '#F1F5F9' },
                        ticks: { color: '#64748B' }
                    },
                    y: {
                        grid: { display: false },
                        ticks: { 
                            color: '#475569',
                            font: { weight: 'bold' }
                        }
                    }
                }
            }
        });

        // --- CHART 4: 5-YEAR OUTLOOK (Mixed: Bar + Line) ---
        const ctxLongTerm = document.getElementById('longTermChart').getContext('2d');
        
        new Chart(ctxLongTerm, {
            type: 'bar',
            data: {
                labels: ['2026', '2027', '2028', '2029', '2030'],
                datasets: [
                    {
                        type: 'line',
                        label: 'Projected Demand Index',
                        data: [100, 110, 118, 125, 135],
                        borderColor: '#22D3EE', // Cyan
                        borderWidth: 3,
                        yAxisID: 'y1',
                        tension: 0.3
                    },
                    {
                        type: 'bar',
                        label: 'New Unit Supply (Thousands)',
                        data: [45, 60, 65, 50, 40],
                        backgroundColor: '#3B82F6', // Blue
                        borderRadius: 4,
                        yAxisID: 'y'
                    }
                ]
            },
            options: {
                ...commonOptions,
                scales: {
                    x: {
                        grid: { display: false, color: '#334155' },
                        ticks: { color: '#94A3B8' }
                    },
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        title: { display: true, text: 'Supply (000s Units)', color: '#94A3B8' },
                        grid: { color: '#334155' },
                        ticks: { color: '#94A3B8' }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        title: { display: true, text: 'Demand Index (Base 100)', color: '#22D3EE' },
                        grid: { drawOnChartArea: false },
                        ticks: { color: '#22D3EE' }
                    }
                },
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        labels: { color: '#F8FAFC' }
                    }
                }
            }
        });

    </script>
