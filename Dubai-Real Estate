    <!-- LOGIC -->
    <script>
        // --- TAB SWITCHING ---
        function switchTab(tabName) {
            const reportView = document.getElementById('view-report');
            const qaView = document.getElementById('view-qa');
            const tabReport = document.getElementById('tab-report');
            const tabQa = document.getElementById('tab-qa');

            if (tabName === 'report') {
                reportView.classList.remove('hidden');
                qaView.classList.add('hidden');
                
                tabReport.classList.add('tab-active');
                tabReport.classList.remove('tab-inactive');
                tabQa.classList.add('tab-inactive');
                tabQa.classList.remove('tab-active');

                // Trigger Chart Resize just in case
                triggerChartResize();
            } else {
                reportView.classList.add('hidden');
                qaView.classList.remove('hidden');

                tabQa.classList.add('tab-active');
                tabQa.classList.remove('tab-inactive');
                tabReport.classList.add('tab-inactive');
                tabReport.classList.remove('tab-active');
            }
        }

        // --- CHART CONFIGURATION ---

        function wrapLabel(label, maxChar = 16) {
            if (label.length <= maxChar) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];
            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxChar) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        const sharedTooltipConfig = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) return label.join(' ');
                    return label;
                }
            }
        };

        const commonOptions = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { labels: { font: { family: "'Segoe UI', sans-serif", size: 12 }, color: '#64748B' } },
                tooltip: sharedTooltipConfig
            }
        };

        // Chart Instances Storage
        const chartInstances = [];

        // 1. Composition Chart
        const ctxComp = document.getElementById('marketCompositionChart').getContext('2d');
        chartInstances.push(new Chart(ctxComp, {
            type: 'doughnut',
            data: {
                labels: ['Off-Plan Sales', 'Secondary Market', 'Commercial/Plots'].map(l => wrapLabel(l, 20)),
                datasets: [{
                    data: [58, 38, 4],
                    backgroundColor: ['#3B82F6', '#06B6D4', '#94A3B8'],
                    borderWidth: 0
                }]
            },
            options: { ...commonOptions, cutout: '65%', plugins: { ...commonOptions.plugins, legend: { position: 'bottom' } } }
        }));

        // 2. Price Trend Chart
        const ctxPrice = document.getElementById('priceTrendChart').getContext('2d');
        chartInstances.push(new Chart(ctxPrice, {
            type: 'line',
            data: {
                labels: ['Feb 25', 'Apr 25', 'Jun 25', 'Aug 25', 'Oct 25', 'Dec 25', 'Jan 26'],
                datasets: [{
                    label: 'Price Index (AED/SqFt)',
                    data: [1250, 1290, 1340, 1380, 1420, 1465, 1480],
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    borderWidth: 3,
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#3B82F6'
                }]
            },
            options: { ...commonOptions, scales: { y: { grid: { color: '#E2E8F0' }, ticks: { color: '#64748B' } }, x: { grid: { display: false }, ticks: { color: '#64748B' } } } }
        }));

        // 3. Top Areas Chart
        const ctxAreas = document.getElementById('topAreasChart').getContext('2d');
        chartInstances.push(new Chart(ctxAreas, {
            type: 'bar',
            data: {
                labels: ['Jumeirah Village Circle (JVC)', 'Business Bay', 'Dubai Marina', 'Palm Jebel Ali', 'Dubai Hills Estate'].map(l => wrapLabel(l, 25)),
                datasets: [{
                    label: 'Sales Volume (AED Billion)',
                    data: [4.2, 3.8, 3.1, 2.9, 2.5],
                    backgroundColor: ['#3B82F6', '#0EA5E9', '#06B6D4', '#22D3EE', '#67E8F9'],
                    borderRadius: 4
                }]
            },
            options: { ...commonOptions, indexAxis: 'y', scales: { x: { grid: { color: '#F1F5F9' }, ticks: { color: '#64748B' } }, y: { grid: { display: false }, ticks: { color: '#475569', font: { weight: 'bold' } } } } }
        }));

        // 4. Long Term Chart
        const ctxLong = document.getElementById('longTermChart').getContext('2d');
        chartInstances.push(new Chart(ctxLong, {
            type: 'bar',
            data: {
                labels: ['2026', '2027', '2028', '2029', '2030'],
                datasets: [
                    { type: 'line', label: 'Demand Index', data: [100, 110, 118, 125, 135], borderColor: '#22D3EE', borderWidth: 3, yAxisID: 'y1', tension: 0.3 },
                    { type: 'bar', label: 'New Supply (000s)', data: [45, 60, 65, 50, 40], backgroundColor: '#3B82F6', borderRadius: 4, yAxisID: 'y' }
                ]
            },
            options: {
                ...commonOptions,
                scales: {
                    x: { grid: { display: false, color: '#334155' }, ticks: { color: '#94A3B8' } },
                    y: { type: 'linear', display: true, position: 'left', grid: { color: '#334155' }, ticks: { color: '#94A3B8' } },
                    y1: { type: 'linear', display: true, position: 'right', grid: { drawOnChartArea: false }, ticks: { color: '#22D3EE' } }
                },
                plugins: { ...commonOptions.plugins, legend: { labels: { color: '#F8FAFC' } } }
            }
        }));

        // Helper to ensure charts resize correctly when tab becomes visible
        function triggerChartResize() {
            chartInstances.forEach(chart => chart.resize());
        }

    </script>
</body>
</html>
